{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "auto",
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "tailwindFunctions": ["tv"],
  "importOrder": [
    "^components/(.*)$",
    "^views/(.*)$",
    "^utils/(.*)$",
    "^assets/(.*)$",
    "^config/(.*)$",
    "^messages/(.*)$",
    "^styles/(.*)$",
    "^[~/]",
    "^/images/(.*)$",
    "^[../]",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
